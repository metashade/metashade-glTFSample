{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GLTFSample (DX12) - Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/glTFSample/bin/GLTFSample_DX12d.exe",
            "args": [
                "--metashade-out-dir",
                "${workspaceFolder}/tests/ref/content"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/glTFSample/bin",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "GLTFSample (VK) - Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/glTFSample/bin/GLTFSample_VKd.exe",
            "args": [
                "--metashade-out-dir",
                "${workspaceFolder}/tests/ref/content"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/glTFSample/bin",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Generate and compile - parallel",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/generate.py",
            "console": "integratedTerminal",
            "args": [
                "--gltf-dir",
                "${workspaceFolder}/glTFSample/media/Cauldron-Media",
                "--out-dir",
                "${workspaceFolder}/tests/ref/content"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/metashade"
            }
        },
        {
            "name": "Generate and compile - serial",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/generate.py",
            "console": "integratedTerminal",
            "args": [
                "--gltf-dir",
                "${workspaceFolder}/glTFSample/media/Cauldron-Media",
                "--out-dir",
                "${workspaceFolder}/tests/ref/content",
                "--serial"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/metashade"
            }
        },
        {
            "name": "Usage",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/generate.py",
            "console": "integratedTerminal",
            "args": [
                "--help"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/metashade"
            }
        }
    ],
    "compounds": []
}